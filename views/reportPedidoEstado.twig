{% extends "layout.twig" %}

{% block content %}


  <h1>
    Consulta
    <small>Estado del pedido</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./reportepedidoest">Consulta</a></li>
    <li class="active">Estado del pedido</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-7">
      <!-- general form elements -->
      <div class="box box-primary" >
        <div class="row">
          <div class='col-md-10'>
            <div class="row">
              <div class='col-md-10'>
                <h3><strong>El pedido # {{ pedidos }} esta en: </strong></h3>
              </div>
            </div>
            <div class="row">
              <div class='col-md-10'>
            <table class='table table-bordered' >
              <tr>
                <th>Actividad</th>
                <th>Cantidad de pares</th>
              </tr>
              {% set total = 0 %}
              {% for report in reporte %}
                <tr>
                  <td> {{report.actividad}}</td>
                  <td> {{ report.cantidadPares }} </td>
                  {% set total = total + report.cantidadPares %}
                </tr>
                
              {% endfor %}
            </table>
          </div>
          </div>
            <div class='col-md-10'>
              <strong>Total: ${{ total }} pares</strong>
            </div>
            
            <div class="row">
              <div class='col-md-12'>
                <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
                  {{ responseMessage }}
                </div>
              </div>
            </div>

         </div>
       </div>
      </div>


{% endblock %}
