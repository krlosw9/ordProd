{% extends "layout.twig" %}

{% block content %}

	

  <h1>
    Pedido
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./pedidolist">Pedido</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-10">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Informacion del pedido</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="pedidoadd" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-3">
              <label for="">Fecha Pedido:</label>
              <div class="input-group date">
                  <input name="fechaPedido" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-3">
              <label for="">Fecha Entrega:</label>
              <div class="input-group date">
                  <input name="fechaEntrega" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-6">
              <label>Referencia:</label>
              <input type="text" name="referencia" class="form-control" placeholder="Maximo 12 digitos" maxlength="12" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Cliente:</label>
              <select class="form-control select-picker" name="idCliente" required>
                <option value="">Seleccione un cliente</option>
                {% for customer in customers %}
                  <option value="{{ customer.id }}">{{ customer.nombre }} {{ customer.apellido }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Ciudad:</label>
              <select class="form-control select-picker" name="idCiudad" required>
                <option value="">Seleccione una ciudad</option>
                {% for city in citys %}
                  <option value="{{ city.id }}">{{ city.nombre }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12">
              <label>Observacion general:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional" maxlength="250">
            </div>
            </div>

            <div class="box-header">
            <div class="box-header">
              <h3 class="box-title">Informacion de cada modelo</h3>
            </div>
              <div class="box-body">
              <div class="row" style="padding-top: 10px;">
                <div class="col-xs-4">
                  
                </div>
                <div class="col-xs-8">
                  
                </div>
              </div>
            {% set iterador = 0 %}
            {% for model in models %}
              <div class="row" style="padding-top: 10px;">
                <div class="form-group">
                <div class="form-group col-xs-4">
                    <label>Modelo:</label>
                    <input type="text" name="modelo" value="{{ model.referenciaMod }}" class="form-control" disabled>
                    <input type="hidden" name="idModelo{{iterador}}" value="{{model.idModelo}}" class="form-control">
                </div>
                <div class="form-group col-xs-7">
                  <label>Observacion:</label>
                  <input type="text" class="form-control" name="observacion{{iterador}}" maxlength="130" placeholder="maxima longitud de 130 caracteres">
                </div>
                </div>

              {% if model.tallas == 1 %}
                <input type="hidden" name="tipoTallas{{iterador}}" value="1">
                <div class="box-body">
                  <div class="row">
                    {% for i in 35..39 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 40..44 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif model.tallas == 2 %}
                <input type="hidden" name="tipoTallas{{iterador}}" value="2">
                <div class="box-body">
                  <div class="row">
                    {% for i in 32..36 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 37..41 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif model.tallas == 3 %}
                <input type="hidden" name="tipoTallas{{iterador}}" value="3">
                <div class="box-body">
                  <div class="row">
                    {% for i in 26..30 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 31..35 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif model.tallas == 4 %}
                <input type="hidden" name="tipoTallas{{iterador}}" value="4">
                <div class="box-body">
                  <div class="row">
                    {% for i in 20..24 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 25..29 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif model.tallas == 5 %}
                <input type="hidden" name="tipoTallas{{iterador}}" value="5">
                <div class="box-body">
                  <div class="row">
                    {% for i in 15..19 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 20..24 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{iterador}}t{{i}}" class="form-control" min="0" placeholder="{{i}}">
                      </div>
                    {% endfor %}
                  </div>
                </div>
                {% else %}
                  <input type="hidden" name="tipoTallas{{iterador}}" value="0">
                  <h3><center>Tallas no definidas en el modelo</center></h3>
              {% endif %}
            


              </div>
            {% set iterador = iterador+1 %}
            {% endfor %}
            <input type="hidden" name="iterador" value="{{iterador}}">
            </div>
            </div>
            
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Registrar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>




{% endblock %}
