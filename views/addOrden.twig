{% extends "layout.twig" %}

{% block content %}

<h1>
    Orden de produccion
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./orderlist">Orden/Produccion</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Informacion de la orden</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="orderadd" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            
            <div class="form-group col-xs-3">
              <label for="">Fecha Registro:</label>
              <div class="input-group date">
                  <input name="fechaRegistro" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-3">
              <label for="">Fecha Entrega:</label>
              <div class="input-group date">
                  <input name="fechaEntrega" type="date" class="form-control" data-placement="top" data-toggle="tooltip" required/>
              </div>
            </div>
            <div class="form-group col-xs-6">
              <label>Referencia:</label>
              <input type="text" name="referenciaOrd" class="form-control" placeholder="Maximo 12 digitos" maxlength="12" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Cliente:</label>
              {% for pedido in pedidos %}
                <input type="text" name="idcliente" value="{{ pedido.nombre }} {{ pedido.apellido }}" class="form-control" disabled>
                <input type="hidden" name="cliente" value="{{ pedido.nombre }} {{ pedido.apellido }}" class="form-control">
              {% endfor %}
            </div>
            <div class="form-group col-xs-6">
              <label>Pedido:</label>
              {% for pedido in pedidos %}
                <input type="text" name="pedido" value="{{ pedido.referencia }}" class="form-control" disabled>
                <input type="hidden" name="idPedido" value="{{ pedido.id }}" class="form-control">
                <input type="hidden" name="cantidadPedido" value="{{ pedido.cantRestante }}" class="form-control">
              {% endfor %}
            </div>
            <div class="form-group col-xs-6">
              <label>Modelo:</label>
              {% for model in models %}
                <input type="text" name="idmodelo" value="{{ model.referenciaMod }}" class="form-control" disabled>
                <input type="hidden" name="modelo" value="{{ model.referenciaMod }}" class="form-control">
                <input type="hidden" name="idPedidoModelo" value="{{ model.id }}" class="form-control">
                <input type="hidden" name="modeloImg" value="{{ model.imagenUrl }}" class="form-control">
              {% endfor %}
            </div>
            <div class="form-group col-xs-6">
              <label>Restantes:</label>
              {% for model in models %}
                <input type="text" name="cant" value="{{ model.cantRestPedMod }}" class="form-control" disabled>
                <input type="hidden" name="cantRestantePedModelo" value="{{ model.cantRestPedMod }}" class="form-control">
              {% endfor %}
            </div>
            {% for talla in models %}
              {% if talla.tallas == 1 %}
                <input type="hidden" name="tipoTallas" value="1">
                <div class="box-body">
                  <div class="row">
                    {% for i in 35..39 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 40..44 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif talla.tallas == 2 %}
                <input type="hidden" name="tipoTallas" value="2">
                <div class="box-body">
                  <div class="row">
                    {% for i in 32..36 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 37..41 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif talla.tallas == 3 %}
                <input type="hidden" name="tipoTallas" value="3">
                <div class="box-body">
                  <div class="row">
                    {% for i in 26..30 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 31..35 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif talla.tallas == 4 %}
                <input type="hidden" name="tipoTallas" value="4">
                <div class="box-body">
                  <div class="row">
                    {% for i in 20..24 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 25..29 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% elseif talla.tallas == 5 %}
                <input type="hidden" name="tipoTallas" value="5">
                <div class="box-body">
                  <div class="row">
                    {% for i in 15..19 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                  <div class="row" style="padding-top: 10px;">
                    {% for i in 20..24 %}
                      <div class="col-xs-2">
                        <input type="number" name="{{i}}" class="form-control" min="0" placeholder="{{i}}" >
                      </div>
                    {% endfor %}
                  </div>
                </div>
                {% else %}
                  <input type="hidden" name="tipoTallas" value="0">
                  <h3><center>Tallas no definidas en el modelo</center></h3>
              {% endif %}
            {% endfor %}
            <div class="form-group col-xs-12">
              <label>Observaciones:</label>
              {% for model in models %}
                <input type="text" name="observacion1" value="{{ model.observacion }}" class="form-control" maxlength="130">
              {% endfor %}
            </div>
            <div class="form-group col-xs-12" style='padding-top: 2px;'>
              <input type="text" name="observacion2" class="form-control" maxlength="130" placeholder="maxima longitud de 130 caracteres">
            </div>

            <div class="box-body">
            
            </div>
            

            <div class="box-header">
            <div class="box-header">
              <h3 class="box-title">Tareas orden de produccion</h3>
            </div>
              <div class="box-body">
              <div class="row" style="padding-top: 10px;">
                <div class="col-xs-3">
                  <label>Tarea:</label>
                </div>
                <div class="col-xs-6">
                  <label>Valor (x) par:</label>
                </div>
              </div>
              <input type="hidden" name="actividads" value="{{actividads}}">
              {% set i = 0 %}
              {% for actividad in actividads %}
              <div class="row" style="padding-top: 10px;">
                <div class="col-xs-3">
                  <input type="text" class="form-control" name="nombreActividad" value="{{actividad.nombre}}" required disabled>
                  <input type="hidden" name="idActividad{{i}}" value="{{actividad.id}}">
                </div>
                <div class="col-xs-6">
                  <input type="number" class="form-control" name="valorActividad{{i}}" value="{{actividad.valorPorPar}}" min="0" required>
                </div>
              </div>
              {% set i = i+1 %}
            {% endfor %}
            <input type="hidden" name="cantActividades" value="{{i}}">
            </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <center><button type="submit" class="btn btn-primary">Registrar</button></center>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
