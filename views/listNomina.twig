{% extends "layout.twig" %} 

{% block content %}

  <h1>
    Nomina
    <small>Consulta</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./rosterlist">Nomina</a></li>
    <li class="active">Consulta</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12 col-sm-10 col-md-8">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border" style="margin-left: 10px;">
          <h3 class="box-title">Nomina - <small>Seleccione el operario y presione continuar</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        
        <form action="payrollList" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Operario:</label>
              <select class="form-control select-picker" name="idPersona" required>
                <option value="">Seleccione un operario</option>
                {% for people in peoples %}
                  <option value="{{ people.id }}">{{ people.nombre }} {{ people.apellido }}</option>
                {% endfor %}
              </select>
            </div>

            <div class="form-group col-xs-12 col-sm-8 col-md-8">
              
              <button type="submit" class="btn btn-primary">Continuar</button>
            </div>
          </div>
          

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>
      </div>

      <div class="col-xs-12 col-sm-10 col-md-8">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border" style="margin-left: 10px;">
          <h3 class="box-title">Nomina Manual - <small>Esta opcion solo se utiliza con las tareas que no se les asigno operario</small></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        
        <form action="rosterlistadd" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Operario:</label>
              <select class="form-control select-picker" name="persona" required>
                <option value="">Seleccione un operario</option>
                {% for people in peoples %}
                  <option value="{{ people.id }}/{{ people.nombre }}/{{ people.apellido }}">{{ people.nombre }} {{ people.apellido }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <label>Cantidad de tickets:</label>
              <input type="number" name="cantTickets" class="form-control" placeholder="" required min="1">
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
              <button type="submit" class="btn btn-primary">Continuar</button>
            </div>
          </div>
          

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

    

{% endblock %}
