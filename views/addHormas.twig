{% extends "layout.twig" %}

{% block content %}

  <h1>
    Hormas
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./shapelist">Hormas</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-10">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registre la horma</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="shapeadd" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-6">
              <label>Referencia:</label>
              <input type="text" name="referencia" class="form-control" placeholder="Maximo 12 digitos" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Linea: Tallas</label>
              <select class="form-control select-picker" id="genero" name="genero" required>
                <option value="1">Caballero: 37 - 44</option>
                <option value="2" selected="selected">Dama: 33 - 41</option>
                <option value="3">Niño: 27 - 33</option>
                <option value="4">Niño: 21 - 26</option>
                <option value="5">Bebe: 15 - 20</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Color:</label>
              <input type="text" name="color" class="form-control" placeholder="Opcional">
            </div>
            <div class="form-group col-xs-6">
              <label>Proveedor:</label>
              <select class="form-control select-picker" name="idProveedor" required>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Observacion:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional">
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Registrar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
