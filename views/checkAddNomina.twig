{% extends "layout.twig" %}

{% block content %}

  <h1>
    Nomina
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./rosterlist">Nomina</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-10">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Verifique que estan todos los #Orden, No se incluyen para el pago los tickets no asignados por el administrador</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="rosteradd" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-12">
              <label>Referencias aprovadas: {{ cantAprovados }}</label>
              <div class='col-md-11' style='border: 1px black solid; word-wrap: break-word; '>
                {{ referenciasAprovadas }}
              </div>
            </div>
            <input type="hidden" name="idPersona" value="{{ idPersona }}">
            <input type="hidden" name="referencias" value="{{ referenciasAprovadas }}">
            <input type="hidden" name="totalNomina" value="{{ totalNomina }}">
            <div class="form-group col-xs-11">
              <label>Observacion:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional, longitud maxima 250 caracteres" maxlength="250">
            </div>
            <div class="form-group col-xs-12">
              <div class='col-md-11' style='font-size: 25px; word-wrap: break-word;'>
                {{ nombrePersona }} su nomina es: ${{ totalNomina }}
              </div>
            </div>
            <input type="hidden" name="cantAprovados" value="{{ cantAprovados }}">
            {% set i = 1 %}
            {% for idAprovado in idAprovados %}
              <input type="hidden" name="idTareaOperario{{i}}" value="{{ idAprovado.idTareaOperario }}" class="form-control">
              {% set i = i+1 %}
            {% endfor %}
            <input type="hidden" name="iterador" value="{{i}}">
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Pagar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
