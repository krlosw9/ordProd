{% extends "layout.twig" %} 

{% block content %}

<h1>
    Modelos
    <small>Listado</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./modellist">Modelos</a></li>
    <li class="active">Listado</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-8">
     <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de modelos</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
       <form action="modeldel" method="post" role="form">
        <table class="table table-bordered" >
          <tr>
            <th style="width: 10px">#</th>
            <th style="width: 100px">Referencia</th>
            <th style="width: 100px">Horma</th>
            <th style="width: 100px">Linea</th>
          </tr>
          {% for modelo in modelos %}
          <tr>
              <td>
                <input type="radio" name="id" value="{{ modelo.id }}">
              </td>
              <td>{{ modelo.referenciaMod }}</td>
              <td>{{ modelo.referencia }}</td>
              <td>{{ modelo.linea }}</td>
          </tr>
          {% endfor %}
        </table>
        <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        <div class="box-footer">
          <button type="submit" name="boton" value="del" class="btn btn-primary" disabled>Eliminar</button>
          <button type="submit" name="boton" value="upd" class="btn btn-primary">Actualizar</button>
        </div>
       </form>
       <div class="box-footer">
       <form action="modeladd" method="get">
        <div class="form-group col-xs-5">
          <input type="number" name="numPart" class="form-control" placeholder="Cantidad de materiales del modelo:" min="1" max="20" required>
        </div>
        <button type="submit" class="btn btn-primary">Nuevo</button>
       </form>
       
       </div>
      </div>
      <!-- /.box-body -->
      </div>
    </div>
    

{% endblock %}
