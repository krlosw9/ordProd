{% extends "layout.twig" %} 

{% block content %}

<h1>
    Ciudades
    <small>Listado</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./citylist">Ciudades</a></li>
    <li class="active">Listado</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
     <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Listado de las ciudades</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
       <form action="citydel" method="post" role="form">
        <table class="table table-bordered" >
          <tr>
            <th style="width: 10px">#</th>
            <th style="width: 150px">Nombre</th>
          </tr>
          {% for city in cities %}
          <tr>
              <td>
                <input type="radio" name="id" value="{{ city.id }}">
              </td>
              <td>{{ city.nombre }}</td>
          </tr>
          {% endfor %}
        </table>
        <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        <div class="box-footer">
          <button type="submit" name="boton" value="del" class="btn btn-primary">Eliminar</button>
          <button type="submit" name="boton" value="upd" class="btn btn-primary">Actualizar</button>
        </div>
       </form>
       <div class="box-footer">
       <form action="cityadd" method="get">
        <button type="submit" class="btn btn-primary">Nuevo</button>
       </form>
       
       </div>
      </div>
      <!-- /.box-body -->
      </div>
    </div>

    

{% endblock %}
