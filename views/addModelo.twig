{% extends "layout.twig" %}

{% block content %}

<h1>
    Modelo
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./modellist">Modelo</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Informacion del modelo</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="modeladd" method="post" role="form" enctype="multipart/form-data">
          <div class="box-body">
            <div class="form-group col-xs-6">
              <label>Referencia:</label>
              <input type="text" name="referenciaMod" class="form-control" placeholder="Maximo 12 digitos" required>
            </div>
            <div class="form-group col-xs-6">
              <label>Horma:</label>
              <select class="form-control select-picker" id="idHorma" name="idHorma">
                <option value="1" selected="selected">Horma1</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Linea:</label>
              <select class="form-control select-picker" id="linea" name="linea">
                <option value="Botin" selected="selected">Botin</option>
              </select>
            </div>
            <div class="form-group col-xs-6">
              <label>Tallas:</label>
              <select class="form-control select-picker" id="tallas" name="tallas">
                <option value="1" selected="selected">37-44</option>
              </select>
            </div>
            <div class="form-group col-xs-12">
              <label>Imagen:</label>
              <input type="file" name="fileImg" class="form-control">
            </div>
            
            
            
            <div class="box-body">
              
                
            </div>
            

            <div class="box-header">
            <div class="box-header">
              <h3 class="box-title">Piezas del modelo</h3>
            </div>
              <div class="box-body">
              <div class="row" style="padding-top: 10px;">
                <div class="col-xs-3">
                  <label>Pieza:</label>
                  <select class="form-control select-picker" id="idPieza" name="idPieza">
                  <option value="1" selected="selected">Pieza1</option>
                </select>
                </div>
                <div class="col-xs-3">
                  <label>Material:</label>
                  <select class="form-control select-picker" id="idInventarioMaterial" name="idInventarioMaterial">
                  <option value="1" selected="selected">Material1</option>
                </select>
                </div>
                <div class="col-xs-3">
                  <label>Consumo/x/Par:</label>
                  <input type="number" class="form-control" name="consumoPorPar" required>
                </div>
                <div class="col-xs-3">
                  <label>Observacion:</label>
                  <input type="text" name="observacion" class="form-control" placeholder="Opcional">
                </div>
              </div>
            {% for i in 2..cantPiezas %}
              <div class="row" style="padding-top: 10px;">
                <div class="col-xs-3">
                  <select class="form-control select-picker" id="idPieza" name="idPieza2">
                  <option value="1" selected="selected">Pieza1</option>
                </select>
                </div>
                <div class="col-xs-3">
                  <select class="form-control select-picker" id="idInventarioMaterial" name="idInventarioMaterial2">
                  <option value="1" selected="selected">Material1</option>
                </select>
                </div>
                <div class="col-xs-3">
                  <input type="number" class="form-control" name="consumoPorPar2">
                </div>
                <div class="col-xs-3">
                  <input type="text" name="observacion2" class="form-control" placeholder="name{{i}}">
                </div>
              </div>
            {% endfor %}
            </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <center><button type="submit" class="btn btn-primary">Registrar</button></center>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>

{% endblock %}
