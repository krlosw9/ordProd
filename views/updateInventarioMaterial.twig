{% extends "layout.twig" %}

{% block content %}



<h1>
    Material
    <small>Actualizacion</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./inventorylist">Material</a></li>
    <li class="active">Actualizacion</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Actualice el material</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="./inventoryupdate" method="post" role="form">
          <div class="box-body">
            <div class="form-group">
              <input type="hidden" name="id" value="{{ inventorys.id }}" class="form-control" placeholder="" required>
            </div>
            <div class="form-group">
              <label>Nombre:</label>
              <input type="text" name="nombre" value="{{ inventorys.nombre }}" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Unidad de medida:</label>
              <select class="form-control select-picker" name="unidadMedida" required>
                <option value="Metro"{% if inventorys.unidadMedida == "Metro" %}selected="selected"{% endif %}>Metro</option>
                <option value="Unidad"{% if inventorys.unidadMedida == "Unidad" %}selected="selected"{% endif %}>Unidad</option>
                <option value="Par"{% if inventorys.unidadMedida == "Par" %}selected="selected"{% endif %}>Par</option>
                <option value="Litro"{% if inventorys.unidadMedida == "Litro" %}selected="selected"{% endif %}>Litro</option>
                <option value="Galon"{% if inventorys.unidadMedida == "Galon" %}selected="selected"{% endif %}>Galon</option>
                <option value="Pesos ($)"{% if inventorys.unidadMedida == "Pesos ($)" %}selected="selected"{% endif %}>Pesos ($)</option>
              </select>
            </div>
            <div class="form-group">
              <label>Precio:</label>
              <input type="number" name="precio" value="{{ inventorys.precio }}" class="form-control">
            </div>
            <div class="form-group">
              <label>Observacion:</label>
              <input type="text" name="observacion" value="{{ inventorys.observacion }}" class="form-control" placeholder="Opcional">
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Actualizar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
            {{ responseMessage }}
          </div>
        </form>
      </div>




{% endblock %}
