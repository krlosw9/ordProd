{% extends "layout.twig" %}

{% block content %}
  <h1>
    Actividad
    <small>Operario</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./activitylist">Actividad</a></li>
    <li class="active">Operario</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registre las profesiones del operario</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="activityadd" method="post" role="form">
          <div class="box-body">
            <div class="form-group">
              <label>Nombre:</label>
              <input type="text" name="nombre" class="form-control" placeholder="Actividad que desempeÃ±a el operario" required>
          </div>
            <div class="form-group">
              <label>Valor por par:</label>
              <input type="number" name="valorPorPar" class="form-control" placeholder="El valor debe ser superior a $1" required>
          </div>
          <div class="form-group">
              <label>Posicion:</label>
              <input type="number" name="posicion" class="form-control" placeholder="Posicion entre 1 al 20" required>
          </div>
            <div class="form-group">
              <label>Observacion:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional">
          </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Registrar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>
{% endblock %}
