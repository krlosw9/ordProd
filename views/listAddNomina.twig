{% extends "layout.twig" %}

{% block content %}
<h1>
    Nomina
    <small>Consulta</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./rosterlist">Nomina</a></li>
    <li class="active">Consulta</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">{{nombre}} ingrese el codigo de barras por medio de la pistola lectora</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="rosterquery" method="post" role="form">
          
            <div class="box-header">
            
              <div class="box-body">
              <input type="hidden" name="idPersona" value="{{idPersona}}">
              <input type="hidden" name="nombre" value="{{nombre}}">
              <input type="hidden" name="cantTickets" value="{{cantTickets}}">
            {% for i in 1..cantTickets %}
              <!--<div class="row" style="padding-top: 10px;">-->
                
                <div class="col-xs-4" style="padding-top: 10px;">
                  <input type="number" class="form-control" name="code{{i}}" placeholder="Codigo de Barras" required>
                </div>
                
              <!--</div>-->
            {% endfor %}
            </div>
            </div>

          
          <!-- /.box-body -->
          <div class="box-footer">
            <center><button type="submit" class="btn btn-primary">Calcular</button></center>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>
{% endblock %}
