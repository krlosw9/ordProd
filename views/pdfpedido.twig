<!DOCTYPE html>
<html>
<head>
  <title>Consumo Pedido</title>
  

  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS' crossorigin='anonymous'>
</head>
<body onload='window.print();'>
<div class='wrapper'>
  <section>
<h1>
    Consumo
    <small></small>
  </h1>
  
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-10">
     <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Pedido Ref# {{ refPedido }}</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
       
        <table class="table table-bordered" >
          <tr>
            
            <th style="width: 10px">Material</th>
            <th style="width: 100px">Consumo</th>
            <th style="width: 100px">Medida</th>
            <th style="width: 100px">Valor estimado</th>
            <th style="width: 100px">Cantidades</th>
          </tr>
          {% set i = 0 %}
          {% set j = 0 %}
          {% for material in materiales %}
            {% for informe in material %}
              <tr>
                  <td>{{ informe.nombre }} j: {{j}}</td>
                  <td>{{ informe.consumoPorPar * cantPares }}</td>
                  <td>{{ informe.unidadMedida }}</td>
                  <td>{{ (informe.consumoPorPar * cantPares) *informe.precio }}</td>
                  <td>{{ cantidades }}</td>
                  
              </tr>

              {% set j = j+1 %}
            {% endfor %}
            iterador: {{i}}
            {% set i = i+1 %}
          {% endfor %}
        </table>
        <h1>Division</h1>
       <table class="table table-bordered" >
          <tr>
            
            <th style="width: 10px">Material</th>
            <th style="width: 100px">Consumo</th>
            <th style="width: 100px">Medida</th>
            <th style="width: 100px">Valor estimado</th>
            <th style="width: 100px">Cantidades</th>
          </tr>
          {% set i = 0 %}
          
          {% for material in materiales %}
            
              <tr>
                  <td>{{ material.nombre }} j: {{j}}</td>
                  <td>{{ material.consumoPorPar * cantPares }}</td>
                  <td>{{ material.unidadMedida }}</td>
                  <td>{{ (material.consumoPorPar * cantPares) *informe.precio }}</td>
                  <td>{{ cantidades }}</td>              
              </tr>

              
            
            iterador: {{i}}
            {% set i = i+1 %}
          {% endfor %}
        </table>
       
      </div>
      <!-- /.box-body -->
      </div>
    </div>




</div>

<!-- ./wrapper -->
</section>
</div>
</body>

</body>
</html>