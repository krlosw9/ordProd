{% extends "layout.twig" %}

{% block content %}

  <h1>
    Consulta
    <small>Nomina por operario</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./reportrosterind">Consulta</a></li>
    <li class="active">Nomina por operario</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Verifique la nomina del operario</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="queryrosterind" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-10">
              <label>Operario:</label>
              <select class="form-control select-picker" name="idPersona" required>
                <option value="">Seleccione el operario</option>
                {% for people in peoples %}
                  <option value="{{ people.id }}">{{ people.nombre }} {{ people.apellido }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Verificar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>


{% endblock %}
