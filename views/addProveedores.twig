{% extends "layout.twig" %}

{% block content %}
<h1>
    Provedores
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./providerlist">Provedores</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registre el provedor</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="provideradd" method="post" role="form">
          <div class="box-body">
            <div class="form-group">
              <label>Nombre:</label>
              <input type="text" name="nombre" class="form-control" placeholder="" required>
            </div>
            <div class="form-group">
              <label>Apellido:</label>
              <input type="text" name="apellido" class="form-control" placeholder="Opcional">
            </div>
            <div class="form-group">
              <label>Telefono:</label>
              <input type="number" name="telefono" class="form-control" placeholder="Fijo o Celular, Maximo 12 Digitos" required>
            </div>
            <div class="form-group">
              <label>Direccion:</label>
              <input type="text" name="direccion" class="form-control" placeholder="Opcional">
            </div>
            <div class="form-group">
              <label>Observacion:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional">
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Registrar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>
{% endblock %}
