{% extends "layout.twig" %}

{% block content %}
  <h1>
    Tallas
    <small>Calzado</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./sizelist">Tallas</a></li>
    <li class="active">Calzado</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Actualice las tallas que utiliza en los modelos</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="./sizeupdate" method="post" role="form">
          <div class="box-body">
            <div class="form-group">
              <input type="hidden" name="id" value="{{ size.id }}" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Talla:</label>
              <input type="number" name="nombreTalla" value="{{ size.nombreTalla }}" class="form-control" placeholder="Ej: 34" min="0" max="999" required>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Actualizar</button>
          </div>
          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
            {{ responseMessage }}
          </div>
        </form>
      </div>
{% endblock %}
