{% extends "layout.twig" %}

{% block content %}

    <h1>
    Materiales
    <small>Registro</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="./"><i class="fa fa-dashboard"></i> Escritorio</a></li>
    <li><a href="./inventorylist">Materiales</a></li>
    <li class="active">Registro</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-6">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registre el material</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="inventoryadd" method="post" role="form">
          <div class="box-body">
            <div class="form-group col-xs-12">
              <label>Nombre:</label>
              <input type="text" name="nombre" class="form-control" maxlength="40" required>
            </div>
            <div class="form-group col-xs-12">
              <label>Unidad de Medida</label>
              <select class="form-control select-picker" id="uMedida" name="uMedida" required>
                <option value="" selected="selected">Seleccione unidad de medida</option>
                <option value="Metro">Metro</option>
                <option value="Unidad">Unidad</option>
                <option value="Litro">Litro</option>
                <option value="Galon">Galon</option>
              </select>
            </div>
            <div class="form-group col-xs-12">
              <label>Existencia:</label>
              <input type="number" name="existencia" class="form-control" value="0" min="0" maxlength="10">
            </div>
            <div class="form-group col-xs-12">
              <label>Observacion:</label>
              <input type="text" name="observacion" class="form-control" placeholder="Opcional" maxlength="250">
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Registrar</button>
          </div>

          <div class="alert alert-primary" role="alert" style="color:#FF0000; font-size:25px;">
          {{ responseMessage }}
        </div>
        </form>
      </div>


{% endblock %}
